<!--
*  Game create view
*  Uses HTML and embedded JavaScript (EJS) 
*  to dyanmically create a webpage to create a new game.
*
* @author Blake Bennett <s532542@nwmissouri.edu>
-->

<% if (game && game.error) { %>
    <div class="alert alert-danger" role="alert"><%- JSON.stringify(game.error) %></div>
    <% } %>
  
  <div class="card">
    <div class="card-header">
      Add game
    </div>
    <div class="card-body">
      <form action="/game/save" method="post">
        <div class="form-group">
          <label for="name">Name:</label>
          <input type="text" class="form-control" id="name" name="name" value="<%= game.name %>" autocomplete="off">
        </div>
        <div class="form-group">
          <label for="playerCount">playerCount:</label>
          <input type="number" class="form-control" id="playerCount" name="playerCount" value="<%= game.playerCount %>" min=1 max=100 step=1 default=1
            autocomplete="off">
        </div>
        <br>
        <!-- Checked checkbox -->
        <div class="form-check">
          <input type="checkbox" class="form-check-input" id="checkbox" value="<%= game.isCardGame %>" checked />
          <label class="form-check-label" for="checkbox">
            Is CardGame?
          </label>
        </div>
        <br>
        <div class="form-group">
          <input type="submit" class="btn btn-info" title="Submits a POST /save request" value="Create" />
        </div>
      </form>
    </div>
  </div>